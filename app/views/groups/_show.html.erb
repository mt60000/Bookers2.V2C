<h2>Groups Detail</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @group, :image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
      <td><%= @group.name %></td>
      <td><%= @group.introduction %></td>
      <td>
        <% @group.users.each do |user| %>
          <%= user.name %><br/>
        <% end %>
      </td>
      <td>
        <% if @group.owner_id == current_user.id %>
          <%= link_to "Edit", edit_group_path, class: "btn btn-success" %>
        <% else %>
          <% if @group.users.exists?(current_user.id) %>
            <%= link_to "Leave this group", group_leave_path(@group.id, current_user.id), class: "btn btn-danger" %>
          <% else %>
            <%= link_to "Join this group", group_join_path(@group.id, current_user.id), class: "btn btn-success" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>