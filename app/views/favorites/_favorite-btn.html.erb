<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="fas fa-heart red"></i><span class="text-decoration-none"><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="fas fa-heart"></i><span class="text-decoration-none"><%= book.favorites.count %></span>
  <% end %>
<% end %>